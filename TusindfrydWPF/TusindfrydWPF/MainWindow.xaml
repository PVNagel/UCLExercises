        <Button x:Name="buttonOpretBlomstersort" Content="Opret Blomstersort" HorizontalAlignment="Center" Margin="0,200,0,0" VerticalAlignment="Top" Width="124" Height="20" Click="buttonOpretBlomstersort_Click"/>

